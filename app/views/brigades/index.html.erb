<div class="site_form">
  <h3>Бригады</h3>
  <div class="row">
    <div class="col col-2">
      <%= link_to 'Новая', new_brigade_path, class:"button small" %>
    </div>
    <div class="col col-10" id="togglebox-target">
      <div class="row gutters push-right">
        <div class="col col-4">
        </div>
        <div class="col col-8">
          <%= form_for @b, url: brigades_path, method: :get, class: "form" do |f| %>
          <div class="row" align="right">
            <div class="append w100">
              <%= f.text_field :search_filter, class: 'search small' %>
              <%= submit_tag "Фильтр", class: 'button secondary outline small' %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
  <br>
  <table class="striped">
    <thead>
      <tr>
        <th>Наименование</th>
        <th>Объектов</th>
        <th>Заявок</th>
        <% @statuses.each do |st| %>
        <th>(<%= st.title %>)</th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @brigades.each do |brigade| %>
      <tr>
        <td><%= link_to brigade.title, brigade %></td>
        <td><%= brigade.sites.size %></td>
        <td><%= brigade.tickets.size %></td>
        <% @statuses.each do |st| %>
        <td><%= brigade.tickets.status(st).size %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>



</div>
