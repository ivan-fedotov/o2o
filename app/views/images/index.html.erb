<div class="site_form">
  <h3>Фотографии</h3>
  <%= form_for @i, url: root_path, method: :get, class: "form" do |f| %>
  <div class="row">
    <div class="col col-2">
      <%= link_to 'Новая', new_ticket_path, class:"button big" %>
    </div>
    <div class="col col-10" id="togglebox-target">
      <div class="row gutters vertical-gut">
        <div class="col col-4">
          <div class="prepend" >
            <span>Отв.</span>
            <%= f.collection_select( :author_filter, @authors, :id, :name, {:include_blank => "Все"}, { class: 'small'}) %>
          </div>
        </div>
        <div class="col col-5">
          <div class="prepend">
            <span>Сайт</span>
            <%= f.collection_select( :site_filter, @sites, :id, :description, {:include_blank => "Все"}, { class: 'small'}) %>
          </div>
        </div>
      </div>
      <div class="row gutters push-right">
        <div class="col col-4">
          <div class="row" align="right">
            <div class="append w100">
              <input type="text" class="search small">
              <%= submit_tag "Фильтр", class: 'button secondary outline small' %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
  <% end %>
</div>
