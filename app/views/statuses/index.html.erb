<div class="site_form">
  <h3>Статусы</h3>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Color</th>
        <th>First</th>
        <th>Hidden</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @statuses.each do |status| %>
        <tr>
          <td><%= status.title %></td>
          <td><%= status.color %></td>
          <td><%= status.is_first %></td>
          <td><%= status.is_hidden %></td>
          <td><%= link_to 'Show', status %></td>
          <td><%= link_to 'Edit', edit_status_path(status) %></td>
          <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'Новый', new_status_path %>
</div>
